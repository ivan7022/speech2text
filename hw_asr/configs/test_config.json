{
  "name": "test_config",
  "text_encoder": "CharTextEncoder",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [
      {"type": "Gain", "args": {"p": 0.1, "sample_rate": 16000}},
      {"type": "Noise", "args": {"p": 0.1, "sample_rate": 16000}},
      {"type": "PitchShift", "args": {"p": 0.1, "sample_rate": 16000}}
    ],
    "spectrogram": [
      {"type": "FrequencyMasking", "args": {"p": 0.1, "frequency": 20}},
      {"type": "TimeMasking", "args": {"p": 0.1, "time": 10}}
    ]
  },
  "arch": {
    "type": "DeepSpeech2",
    "args": {
      "n_feats": 128,
      "fc_hidden": 512
    }
  },
  "data": {
    "train": {
      "batch_size": 64,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 20.0,
            "max_text_length": 200
          },
          "module": "hw_asr.datasets"
        },
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-360",
            "max_audio_length": 20.0,
            "max_text_length": 200
          },
          "module": "hw_asr.datasets"
        },
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-other-500",
            "max_audio_length": 20.0,
            "max_text_length": 200
          },
          "module": "hw_asr.datasets"
        }
      ]
    },
    "val": {
      "batch_size": 128,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean"
          }
        }
      ]
    },
    "test-other": {
      "batch_size": 128,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-other"
          }
        }
      ]
    },
    "test-clean": {
      "batch_size": 128,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 5e-4,
      "weight_decay": 1e-5
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 1000,
      "epochs": 50,
      "anneal_strategy": "cos",
      "max_lr": 5e-4,
      "pct_start": 0.2
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "dla-asr",
    "len_epoch": 1000,
    "grad_norm_clip": 10
  }
}
